<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>
   <div class="edit-book">
	<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>

	<div class="field-row">
		<%= f.label :title, 'Title' %><br>
		<%= f.text_field :title, autofocus: true, class: "col-xs-12"%>
	</div>
	<div class="field-row ">
		<%= f.label :body, 'Opinion' %><br>
		<%= f.text_area :body, autofocus: true, class: "col-xs-12" %>
	</div>
	<div class="actions-row">
		<%= f.submit 'Update Book', class: "btn btn-primary btn-block" %>
	</div>
		<%= link_to "Show", book_path(@book) %><span>&nbsp;|&nbsp;</span>
	    <%= link_to "Back", books_path %>
	<% end %>
   </div>
  </div>
  <div class="col-md-3"></div>
</div>
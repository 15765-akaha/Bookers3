 	<h2>New book</h2>
	 <%= form_for(book) do |f| %>
		 <div class="field-row ">
		  <%= f.label :Title %><br>
		  <%= f.text_field :title, class: "col-xs-12" %>
		 </div>

		 <div class="field-row">
		  <%= f.label :Opinion %><br>
		  <%= f.text_area :body, class: "col-xs-12" %>
		 </div>

		 <div class="actions-row">
		  <%=f.submit "Create Book", class: "btn btn-primary btn-block" %>
	     </div>
	 <% end %>
	

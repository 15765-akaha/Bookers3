<div class="row">

  <h2>Searching result</h2>
   <table class= "table table-striped">
        <% if @books.present? %>
          <thead>
            <tr>
                 <th>Image</th>
                 <th>Title</th>
                 <th>Opinion</th>
                 <th></th>
            </tr>
          </thead>

           <% @books.each do |book| %>
            <tr>
                <td><%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", :size => "40x40" %>
                    <% end %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'show', book_path(book) %>
            </tr>
           <% end %>
        <% elsif %>
           <% @users.present? %>
        <thead>
            <tr>
                 <th>Image</th>
                 <th>Name</th>
                 <th>Introduction</th>
                 <th></th>
            </tr>
        </thead>

           <% @users.each do |user| %>
            <tr>
                <td>
                    <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", :size => "40x40" %>
                </td>
                <td><%= user.name %></td>
                <td><%= user.introduction %></td>
                <td><%= link_to 'show', user_path(user) %></td>
            </tr>
           <% end %>
        <% end %>
   </table>
</div>
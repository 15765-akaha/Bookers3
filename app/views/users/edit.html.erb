<h1>User info</h1>

<%= form_for(@user) do |f| %>
 <%= render 'layouts/error_messages', model: f.object %>

 <div class="field">
 	<%= f.label :name, 'Name' %>
	<%= f.text_field :name, autofocus: true %>
 </div>

 <div class="field">
	<%= f.label :profile_image, 'Image' %>
	<%= f.attachment_field :profile_image, placefolder: "ProfileImage" %>
 </div>

 <div class="field">
	<%= f.label :introduction, 'Introduction' %>
	<%= f.text_area :introduction, autofocus: true %>
 </div>

 <div class="actions">
	<%= f.submit 'Update User' %>
 </div>
<% end %>
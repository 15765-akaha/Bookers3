<h2>User info</h2>
	<table class="table">
	  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", :size => "100x100") %></tr>
	
	  <tr>
		  <th>name</th>
		  <th><%= user.name %></th>
	  </tr>

	  <tr>
		  <th>introduction</th>
		  <th><%= user.introduction %></th>
	  </tr>

	  <tr>
		  <th>follows</th>
		  <td><%= link_to follows_user_path(user) do %>
		  	  <%= user.followings.count %>
		  	  <% end %>
		  </td>
	  </tr>

	  <tr>
		  <th>followers</th>
		  <td><%= link_to followers_user_path(user) do %>
		  	  <%= user.followers.count %>
		  	  <% end %>
		  </td>
	  </tr>
	</table>
	    <%= link_to edit_user_path(user) do %>
	    <button type="button" class="btn btn-default btn-block">
	    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
	    <% end %>


